# ============================================
# CONFIGURACIÓN DE BASE DE DATOS
# ============================================
# URL completa de conexión a PostgreSQL
# Formato: jdbc:postgresql://host:port/database
# Ejemplo local: jdbc:postgresql://localhost:5432/inventory_system
# Ejemplo Supabase: jdbc:postgresql://db.xxxxx.supabase.co:5432/postgres?sslmode=require
DB_URL=jdbc:postgresql://localhost:5432/inventory_system

# Usuario de la base de datos
DB_USERNAME=postgres

# Contraseña de la base de datos
DB_PASSWORD=tu_password_aqui

# ============================================
# CONFIGURACIÓN JWT (TOKENS)
# ============================================
# Clave secreta para firmar y verificar tokens JWT
# IMPORTANTE: Debe tener al menos 32 caracteres para ser segura
# En producción, genera una clave segura aleatoria (puedes usar: openssl rand -base64 32)
JWT_SECRET=mySecretKey123456789012345678901234567890

# Tiempo de expiración del token JWT en milisegundos
# Por defecto: 86400000 = 24 horas
# Ejemplos:
#   3600000  = 1 hora
#   86400000 = 24 horas
#   604800000 = 7 días
JWT_EXPIRATION=86400000

# ============================================
# CONFIGURACIÓN DE SIIGO API (OPCIONAL)
# ============================================
# Credenciales para autenticación con la API de Siigo
# Se requieren username y access_key para obtener el token de acceso
# Consulta la documentación de Siigo para obtener tus credenciales
SIIGO_USERNAME=tu_usuario_siigo
SIIGO_ACCESS_KEY=tu_access_key_siigo
SIIGO_API_URL=https://api.siigo.com

# ============================================
# CONFIGURACIÓN DEL SERVIDOR (OPCIONAL)
# ============================================
# Puerto en el que se ejecutará la aplicación
SERVER_PORT=8080

# Perfil de Spring Boot activo
# Opciones: dev, test, prod
SPRING_PROFILES_ACTIVE=dev

# Nombre de la aplicación
SPRING_APPLICATION_NAME=pib2

# ============================================
# CONFIGURACIÓN DE LOGGING (OPCIONAL)
# ============================================
# Nivel de logging
# Opciones: TRACE, DEBUG, INFO, WARN, ERROR
LOGGING_LEVEL_ROOT=INFO
LOGGING_LEVEL_ORG_HIBERNATE=DEBUG

# ============================================
# NOTAS IMPORTANTES
# ============================================
# 1. Copia este archivo como .env y completa los valores reales
# 2. NUNCA subas el archivo .env al repositorio (ya debería estar en .gitignore)
# 3. El archivo .env.example es seguro de subir, ya que solo contiene ejemplos
# 4. En producción, usa variables de entorno del sistema o un gestor de secretos
# 5. Genera claves JWT seguras en producción (mínimo 32 caracteres)